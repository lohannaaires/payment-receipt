<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">92dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="elevation">2dp</item>
        <item name="strokeColor">@color/light_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/gray_99</item>
        <item name="rippleColor">@color/ripple_gray</item>

        <item name="iconGravity">top</item>
        <item name="iconPadding">20dp</item>
        <item name="iconTint">@color/blue_grey_2_primary</item>

        <item name="android:textColor">@color/black_olive</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
